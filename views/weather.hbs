    <script>
       const getCurrentDay = () => {
      var weekday = new Array(7);
      weekday[0] = "Sun";
      weekday[1] = "Mon";
      weekday[2] = "Tue";
      weekday[3] = "Wed";
      weekday[4] = "Thu";
      weekday[5] = "Fri";
      weekday[6] = "Sat";
      let currentTime = new Date();
       days = weekday[currentTime.getDay()];
       const day = document.getElementById('day');
      day.innerText = days;
   };
   getCurrentDay();


   const getCurrentTime = () => {
    var months = [
        "Jan",
